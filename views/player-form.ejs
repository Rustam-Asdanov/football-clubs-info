<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      form,
      input[type="button"] {
        width: 150px;
        font-size: x-large;
      }

      table {
        background-color: red;
        width: 100%;
      }

      table,
      td,
      tr,
      th {
        border: 3px solid black;
        border-collapse: collapse;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <form>
      <input type="hidden" name="_id" />
      <label for="p-number">Number</label>
      <input type="number" name="number" id="p-number" min="1" max="99" />
      <label for="p-name">Full name</label>
      <input type="text" name="fullname" id="p-name" />
      <label for="p-country">Country</label>
      <input type="text" name="country" id="p-country" />
      <label for="p-club">Club</label>
      <input type="text" name="club" id="p-club" />
      <label for="p-position">Position</label>
      <input type="text" name="position" id="p-position" />
      <label for="p-age">Age</label>
      <input type="text" name="age" id="p-age" />
      <input type="reset" value="Reset" />
      <input type="submit" name="submit" value="Save" />
    </form>

    <table>
      <caption>
        Player base
      </caption>
      <thead>
        <th>N</th>
        <th>Number</th>
        <th>Full name</th>
        <th>Country</th>
        <th>Club</th>
        <th>Position</th>
        <th>Age</th>
        <th>Operation</th>
      </thead>
      <tbody></tbody>
    </table>

    <script src="script/player-form-script.js"></script>
  </body>
</html>
