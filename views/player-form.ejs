<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style/player-form-style.css" />
  </head>
  <body>
    <form>
      <h2>Player Form</h2>
      <input type="hidden" name="_id" />
      <label for="p-number">Number</label>
      <input type="number" name="number" id="p-number" min="1" max="99" />
      <label for="p-name">Full name</label>
      <input type="text" name="fullname" id="p-name" />
      <label for="p-country">Country</label>
      <input type="text" name="country" id="p-country" />
      <label for="p-club">Club</label>

      <select name="team_id" id="">
        <% teams.forEach((team)=>{ %>
        <option value="<%= team['_id'] %>"><%= team['name'] %></option>
        <% });%>
      </select>

      <label for="p-position">Position</label>
      <input type="text" name="position" id="p-position" />
      <label for="p-age">Age</label>
      <input type="text" name="age" id="p-age" />
      <input type="reset" value="Reset" />
      <input type="submit" name="submit" value="Save" />
    </form>
    <hr />
    <table>
      <caption>
        <h2>Player Base</h2>
      </caption>
      <thead>
        <th>N</th>
        <th>Number</th>
        <th>Full name</th>
        <th>Country</th>
        <th>Club</th>
        <th>Position</th>
        <th>Age</th>
        <th>Operation</th>
      </thead>
      <tbody></tbody>
    </table>

    <script src="script/player-form-script.js"></script>
  </body>
</html>
